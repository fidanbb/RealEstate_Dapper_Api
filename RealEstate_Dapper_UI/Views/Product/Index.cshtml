@model List<ResultProductDto>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}


<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Advert List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Advert Title</th>
                                <th scope="col">City</th>
                                <th scope="col">District</th>
                                <th scope="col">Category</th>
                                <th scope="col">Price</th>
                                <th scope="col">Type</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>
                                <th scope="col">View in Site</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.ProductID</th>
                                    <td>@item.Title</td>
                                    <td>
                                        @item.City
                                    </td>
                                    <td>
                                        @item.District
                                    </td>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td>
                                        $@item.Price
                                    </td>
                                    <td>
                                        @item.Type
                                    </td>
                                    <td>
                                        <a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Product" asp-action="UpdateProduct"
                                           asp-route-id="@item.ProductID" class="btn btn-outline-success">Update</a>
                                    </td>
                                    <td>
                                        <a asp-controller="Product" asp-action="ProductDetail"
                                           asp-route-id="@item.ProductID" class="btn btn-outline-success">View in Site</a>
                                    </td>

                                </tr>
                            }


                        </tbody>
                    </table>
                    <a href="/Product/CreateProduct/" class="btn btn-outline-info">Add New Product</a>
                </div>
            </div>
        </div>
    </div>
</div>