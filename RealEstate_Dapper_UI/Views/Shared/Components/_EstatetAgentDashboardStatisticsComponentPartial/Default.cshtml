

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-chart-area fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">Total Product</p>
                    <h6 class="mb-0">@ViewBag.allProductsCount </h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-rocket fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">My Products</p>
                    <h6 class="mb-0">@ViewBag.productCountByEmployee</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-hand-spock fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">My Deactive Ads</p>
                    <h6 class="mb-0">@ViewBag.productCountByStatusFalse</h6>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-xl-3">
            <div class="bg-light rounded d-flex align-items-center justify-content-between p-4">
                <i class="fa fa-thumbs-up fa-3x text-primary"></i>
                <div class="ms-3">
                    <p class="mb-2">My Active Ads</p>
                    <h6 class="mb-0">@ViewBag.productCountByStatusTrue</h6>
                </div>
            </div>
        </div>
    </div>
</div>