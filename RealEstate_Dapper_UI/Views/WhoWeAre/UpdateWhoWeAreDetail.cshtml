@model UpdateWhoWeAreDetailDto
@{
    ViewData["Title"] = "UpdateWhoWeAreDetail";
    Layout = "~/Views/Admin/Index.cshtml";

}

<div class="container-fluid pt-4 px-4 ">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Who We Are Area Updating Page</h6>
                <form method="post" asp-action="UpdateWhoWeAreDetail">
                    <input type="hidden" asp-for="WhoWeAreDetailID" />
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Title</label>
                        <input asp-for="Title" type="text" class="form-control">
                        <span asp-validation-for="Title" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label asp-for="Subtitle" class="form-label">Subtitle</label>
                        <input asp-for="Subtitle" type="text" class="form-control">
                        <span asp-validation-for="Subtitle" class="text-danger"></span>

                    </div>

                    <div class="mb-3">
                        <label asp-for="Description1" class="form-label">Description1</label>
                        <textarea asp-for="Description1" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Description1" class="text-danger"></span>

                    </div>

                    <div class="mb-3">
                        <label asp-for="Description2" class="form-label">Description2</label>
                        <textarea asp-for="Description2" rows="5" class="form-control"></textarea>
                        <span asp-validation-for="Description2" class="text-danger"></span>

                    </div>

                    <button class="btn btn-success">Update</button>
                    <a asp-controller="WhoWeAre" asp-action="Index" class="btn btn-danger">Back</a>
                </form>

            </div>
        </div>

    </div>
</div>

