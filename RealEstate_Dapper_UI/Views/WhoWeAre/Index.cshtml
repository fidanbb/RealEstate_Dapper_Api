@model List<ResultWhoWeAreDetailDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Who We Are List</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Title</th>
                                <th scope="col">Subtitle</th>
                                <th scope="col">Delete</th>
                                <th scope="col">Update</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                count++;
                                <tr>
                                    <th scope="row">@count</th>
                                    <td>@item.Title</td>
                                    <td>
                                        @item.Subtitle
                                    </td>
                                    <td>
                                        <a href="/WhoWeAre/DeleteWhoWeAreDetail/@item.WhoWeAreDetailID" class="btn btn-outline-danger">Delete</a>
                                    </td>
                                    <td>
                                        <a asp-controller="WhoWeAre" asp-action="UpdateWhoWeAreDetail"
                                           asp-route-id="@item.WhoWeAreDetailID" class="btn btn-outline-success">Update</a>
                                    </td>


                                </tr>
                            }


                        </tbody>
                    </table>
                    <a asp-controller="WhoWeAre" asp-action="CreateWhoWeAreDetail"
                       class="btn btn-outline-info">Add New Who We Are</a>
                </div>
            </div>
        </div>
    </div>
</div>

