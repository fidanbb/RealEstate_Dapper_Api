@model CreateCategoryDto
@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Views/Admin/Index.cshtml";
}





<div class="container-fluid pt-4 px-4 " >
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">New Category Adding Page</h6>
                <form method="post" asp-action="CreateCategory">
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label">Category Name</label>
                        <input asp-for="CategoryName" type="text" class="form-control">
                        <span asp-validation-for="CategoryName" class="text-danger"></span>

                    </div>

                    <button class="btn btn-primary">Save Category</button>
                    <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Back</a>
                </form>
              
            </div>
        </div>

    </div>
</div>



