@model CreatePopularLocationDto
@{
    ViewData["Title"] = "CreatePopularLocation";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4 ">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">New Popular Location Creating Page</h6>
                <form method="post" asp-action="CreatePopularLocation">
                    <div class="mb-3">
                        <label asp-for="CityName" class="form-label">City Name</label>
                        <input asp-for="CityName" type="text" class="form-control">
                        <span asp-validation-for="CityName" class="text-danger"></span>

                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image Url</label>
                        <input asp-for="ImageUrl" type="text" class="form-control">
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>

                    </div>

                    <button class="btn btn-primary">Save </button>
                    <a asp-controller="PopularLocation" asp-action="Index" class="btn btn-danger">Back</a>
                </form>

            </div>
        </div>

    </div>
</div>


